<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/superItem"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/icone"
    android:layout_width="@dimen/img"
    android:layout_height="@dimen/img"
    android:contentDescription="@string/image"
    android:padding="@dimen/img_p"
    android:src="@drawable/ic_baseline_room"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/text"
    android:layout_width="@dimen/min_width"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:paddingStart="@dimen/tps"
    android:singleLine="true"
    android:textSize="@dimen/ts_2"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/participation"
    app:layout_constraintEnd_toStartOf="@+id/delete"
    app:layout_constraintStart_toEndOf="@+id/icone"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="spread"
    tools:ignore="RtlSymmetry"
    tools:text="RÃ©union K - 12h00 - Soutenance Android " />

  <TextView
    android:id="@+id/participation"
    android:layout_width="@dimen/min_width"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:paddingStart="@dimen/tps"
    android:paddingEnd="@dimen/tps"
    android:singleLine="true"
    android:textSize="@dimen/ts_1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/delete"
    app:layout_constraintStart_toEndOf="@+id/icone"
    app:layout_constraintStart_toStartOf="@+id/text"
    app:layout_constraintTop_toBottomOf="@+id/text"
    app:layout_constraintVertical_bias="0.2"
    tools:text="Participant" />

  <ImageView
    android:id="@+id/delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/tps"
    android:layout_marginRight="@dimen/tps"
    android:contentDescription="@string/trash"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_baseline_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>
